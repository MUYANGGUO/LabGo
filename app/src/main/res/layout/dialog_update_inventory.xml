<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateInventoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp">

        <TextView
            android:id="@+id/text_update_inventory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Notice"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000" />

        <!--<View-->
            <!--android:id="@+id/line_update_inventory_dialog"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="#dadada"-->
            <!--android:layout_alignStart="@+id/text_item_description"-->
            <!--android:layout_below="@+id/text_update_inventory_title"-->
            <!--android:layout_marginTop="15dp" />-->

        <TextView
            android:id="@+id/text_update_inventory_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_update_inventory_title"
            android:layout_marginTop="10dp"
            android:text="Are you sure you want to ADD this item?"
            android:textSize="13sp"
            android:textColor="#000" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_update_inventory_image"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_update_inventory_message"
            android:layout_marginTop="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/text_update_inventory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_update_inventory_image"
            android:layout_toEndOf="@+id/image_update_inventory_image"
            android:layout_marginStart="20dp"
            android:textSize="17sp"
            android:text="Item name"
            android:textColor="#000" />

        <TextView
            android:id="@+id/text_update_inventory_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_update_inventory_name"
            android:layout_below="@+id/text_update_inventory_name"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:text="Item description"
            android:textColor="#000" />

        <TextView
            android:id="@+id/action_update_inventory_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@color/buzzBlue" />

        <TextView
            android:id="@+id/action_update_inventory_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/action_update_inventory_ok"
            android:layout_marginEnd="30dp"
            android:textSize="18sp"
            android:textColor="@color/buzzBlue" />
    </RelativeLayout>

</RelativeLayout>